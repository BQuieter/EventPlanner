<UserControl x:Class="EventPlannerClient.Views.Authorization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:EventPlannerClient.Converters"
             xmlns:local="clr-namespace:EventPlannerClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverterH x:Key="BoolToVisibility" IsReversed="False"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Авторизация" Style="{StaticResource CaptionTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Text="Логин" Style="{StaticResource AuthorizeTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Text="Пароль" Style="{StaticResource AuthorizeTextBlockStyle}"/>
        <TextBox Grid.Row="2" Style="{StaticResource AuthorizationTextBoxStyle}" Text="{Binding Login}"/>
        <TextBox Grid.Row="4" Style="{StaticResource AuthorizationTextBoxStyle}" Text="{Binding Password}"/>
        <TextBlock Grid.Row="5" VerticalAlignment="Top" Text="{Binding ErrorMessage}" Visibility="{Binding IsLoginFailed, Converter={StaticResource BoolToVisibility}}" Style="{StaticResource WarnTextBlockStyle}"/>
        <Button Grid.Row="6" Height="50" Width="200" Content="Войти" Command="{Binding AuthorizationCommand}" Style="{StaticResource AuthorizationButtonStyle}"/>
    </Grid>
</UserControl>
