<UserControl x:Class="EventPlannerClient.Views.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventPlannerClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/Dark.xaml"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Регистрация" Style="{StaticResource CaptionTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Text="Логин" Style="{StaticResource AuthorizeTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Text="Пароль" Style="{StaticResource AuthorizeTextBlockStyle}"/>
        <TextBlock Grid.Row="5" Text="Повторите пароль" Style="{StaticResource AuthorizeTextBlockStyle}"/>
        <TextBox Grid.Row="2" Style="{StaticResource AuthorizationTextBoxStyle}" Text="{Binding Login, Mode = TwoWay}"/>
        <TextBox Grid.Row="4" Style="{StaticResource AuthorizationTextBoxStyle}" Text="{Binding Password, Mode = TwoWay}"/>
        <TextBox Grid.Row="6" Style="{StaticResource AuthorizationTextBoxStyle}" Text="{Binding ConfirmPassword, Mode = TwoWay}"/>
        <Button Grid.Row="7" Height="50" Width="200" Content="Зарегистрироваться" Command="{Binding RegistrationCommand}" Style="{StaticResource AuthorizationButtonStyle}"/>
    </Grid>
</UserControl>
