<UserControl x:Class="EventPlannerClient.Views.CalendarEvents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventPlannerClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/Dark.xaml"/>
    </UserControl.Resources>
    
    <Grid>
        <Viewbox Height="300" Width="250">
            <Calendar CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle}" CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle}" Style="{DynamicResource CalendarStyle}" />
        </Viewbox>
    </Grid>
</UserControl>
