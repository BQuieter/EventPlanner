<UserControl x:Class="EventPlannerClient.Views.CalendarEvents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventPlannerClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/Dark.xaml"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" VerticalAlignment="Top">
            <Calendar SelectedDate="{Binding Date}" CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle}" CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle}" Style="{DynamicResource CalendarStyle}" />
        </Viewbox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListBox ItemsSource="{Binding Events}" Style="{DynamicResource ListBoxStyle}" Margin="0 10 0 10" Grid.Column="1" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding TimeString}" Style="{StaticResource ListBoxTextBlock}"/>
                            <TextBlock Grid.Column="1" Text="{Binding OwnerLogin}" Style="{StaticResource ListBoxTextBlock}"/>
                            <TextBlock Grid.Column="2" Text="{Binding ImportanceString}" Style="{StaticResource ListBoxTextBlock}"/>
                            <TextBlock Grid.Column="3" Text="{Binding Description}" Style="{StaticResource ListBoxTextBlock}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
